{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/transform", "destination": "/transform.js" },
    { "source": "/(.*)", "destination": "/index.js" }
  ]
}
